<x-filament-panels::page
    wire:loading.class="opacity-50"
    x-data="{ isLoading: false }"
    x-init="$watch('isLoading', value => $el.style.opacity = value ? '0.5' : '1')"
>
    <div class="space-y-6">
        <!-- Header -->
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">
                    Laporan Vendor/Customer Summary
                </h1>
                <p class="text-gray-600 mt-1">
                    Ringkasan transaksi dengan vendor/customer tertentu
                </p>
            </div>
        </div>

        <!-- Form Filters -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <form wire:submit.prevent="updateFilters" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <!-- Start Date -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Tanggal Mulai
                        </label>
                        <input
                            type="date"
                            wire:model.live="start_date"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        >
                    </div>

                    <!-- End Date -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Tanggal Akhir
                        </label>
                        <input
                            type="date"
                            wire:model.live="end_date"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        >
                    </div>

                    <!-- Type -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Tipe
                        </label>
                        <select
                            wire:model.live="type"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        >
                            <option value="customer">Customer (Penjualan)</option>
                            <option value="vendor">Vendor (Pembelian)</option>
                        </select>
                    </div>

                    <!-- Search -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Cari
                        </label>
                        <input
                            type="text"
                            wire:model.live.debounce.500ms="search"
                            placeholder="Cari berdasarkan kode atau nama"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        >
                    </div>
                </div>
            </form>
        </div>

        <!-- Table -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
            {{ $this->table }}
        </div>
    </div>
</x-filament-panels::page>